{
  "tasks": {
    "run": "deno run --unstable --allow-net index.ts",
    "deps:update": "deno cache --lock=deno.lock --lock-write deps.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false
  }
}
